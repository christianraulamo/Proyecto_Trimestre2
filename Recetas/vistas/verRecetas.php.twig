{% extends "plantillaBase.php.twig" %}

{% block titulo %}
	<h1 class="mt-4">Recetas</h1>
{% endblock %}

{% block cabecera %}
	<div class="container">
		<br>

		<div class="container-flex">
			<div class="navbar navbar-expand-lg navbar-light bg-success">
				<a class="navbar-brand" href="#"></a>
				<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>

				<div class="collapse navbar-collapse" id="navbarSupportedContent">
					<ul class="navbar-nav mr-auto">

						{% for item in usu %}
							<li class="nav-item active">
								<a class="nav-link text-light" href="index.php?ope=listar&con=receta&email={{item.Correo}}&pass={{item.Contraseña}}">Inicio</a>
							</li>

						{% endfor %}

						{% for item in usu %}
							{% if item.Admin != 0 %}
								<li class="nav-item">
									<a class="nav-link text-light" href="index.php?ope=anadir&con=receta&email={{item.Correo}}&pass={{item.Contraseña}}">Añadir Recetas</a>
								</li>
							{% endif %}

						{% endfor %}


						{% for item in usu %}
							<li class="nav-item">
								<a class="nav-link text-light" href="index.php?ope=perfil&con=login&email={{item.Correo}}&pass={{item.Contraseña}}">Perfil</a>
							</li>

						{% endfor %}

						<li class="nav-item">
							<a href="index.php?ope=listar&con=login" class="nav-link text-light">Salir</a>
						</li>
					</ul>
				</div>
			</div>
		</div>
	{% endblock %}

	{% block contenido %}
		<div class="row mb-3">
			{% for item in dat %}
				{% for item2 in usu %}

					<div class="col col-lg-4">
						<div class="card  text-white bg-success  mb-3 mx-auto" style="width:22rem;">
							<h5 class="card-header">{{ item.NomRec}}</h5>
							<div class="card-body">
								<h5 class="card-title">Ingrediente principal:
									{{item.IngredientePrincipal}}</h5>
								<p class="card-text">Temporada:
									{{ item.Temporada }}</p>
								<a href="index.php?ope=ver&con=receta&id={{ item.idRec }}&email={{item2.Correo}}&pass={{item2.Contraseña}}" class="btn btn-info">Ver mas</a>
							</div>
						</div>
					</div>
				{% endfor %}
			{% endfor %}
		</div>
	</div>
{% endblock %}
